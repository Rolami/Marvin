    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
    <RuntimeHostConfigurationOption Include="System.Runtime.Loader.UseRidGraph" Value="true" />
  </ItemGroup>

</Project>
